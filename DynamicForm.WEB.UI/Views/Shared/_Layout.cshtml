@using DynamicForm.Model.Base.BaseModel

@{
    AccountModel session = (AccountModel)Session["AccountUser"];
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("css",false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="col-md-4">
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li style="font-size: 15px;">@Html.ActionLink("Home", "Index", "Home")</li>
                        <li style="font-size: 15px;">@Html.ActionLink("Form", "Index", "Form")</li>
                    </ul>

                </div>
            </div>
            <div class="col-md-4">
            </div>
            <div class="col-md-4">
                <ul class="nav navbar-nav">
                    @if (session != null)
                    {
                        <li style="font-size: 15px;">
                            <a style="font-size:15px; color:deepskyblue">
                                Hoşgeldiniz! &nbsp  @session.AccountName @session.AccountSurname
                            </a>
                        </li>
                        <li style="font-size: 15px;">
                            <a href="/Account/Logout" style="font-size: 15px;">
                                <i class="fa fa-sign-out-alt"></i> Çıkış Yap
                            </a>
                        </li>

                    }
                    else
                    {
                        <li style="font-size: 15px;">
                            <a style="font-size:15px; opacity:0; cursor:default">
                                Hoşgeldiniz! &nbsp  Hasan Mirzaoğlu
                            </a>
                        </li>
                        <li style="font-size: 15px;">
                            <a href="/Account/Login" style="font-size: 15px;">
                                <i class="fa fa-sign-in-alt"></i> Giriş Yap
                            </a>
                        </li>
                    }

                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
     
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
